.modalDialog
  position fixed
  font-family Arial, Helvetica, sans-serif
  top 0
  right 0
  bottom 0
  left 0
  background rgba(0, 0, 0, 0.8)
  z-index 99999
  opacity 0
  -webkit-transition opacity 400ms ease-in
  -moz-transition opacity 400ms ease-in
  transition opacity 400ms ease-in
  pointer-events none
  &.target
      opacity 1
      pointer-events auto
  & > div
      width 400px
      position relative
      margin 10% auto
      padding 5px 20px 13px 20px
      border-radius 10px
      background #fff
      background -moz-linear-gradient(#fff, #999)
      background -webkit-linear-gradient(#fff, #999)
      background -o-linear-gradient(#fff, #999)
  .integration-form
    padding-top 61px
    padding 0 28px
    height 225px
    .btn-default
      width 100%
    .head-title
      padding-top 10px
      font-size 24px
      margin-bottom 10px
    .img-container
      width 160px
      height 38px
      img
        width 100%
        height 100%

.close
  background #606061
  color #FFFFFF
  line-height 25px
  position absolute
  right 5px
  text-align center
  top 3px
  width 24px
  text-decoration none
  font-weight bold
  -webkit-border-radius 12px
  -moz-border-radius 12px
  border-radius 12px
  -moz-box-shadow 1px 1px 3px #000
  -webkit-box-shadow 1px 1px 3px #000
  box-shadow 1px 1px 3px #000
  &:hover
      background #ffffff