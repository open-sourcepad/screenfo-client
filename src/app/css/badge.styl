badge($color,$bg-color)
  padding: 4px 9px
  background-color: $bg-color
  color: $color !important
  border-top-left-radius: 3px
  border-top-right-radius: 3px
  border-bottom-left-radius: 3px
  border-bottom-right-radius: 3px
  font-size: 11px


.badge
  badge($white,$gray)

.badge-success
  badge($white,$success)

.badge-danger
  badge($white,$danger)
