.box
  .inner-container
    .header-label
      span Register

    .img-container
      img(src="/vendor/images/logo.png")

    form(name="registerForm" novalidate="true" autocomplete="off")
      .form-horizontal
        .form-group
          input.form-control(
            type="email"
            name="email"
            ng-model="user.email"
            placeholder="Email"
            required=true
            ng-enter="register(registerForm)"
          )
        .form-group
          input.form-control(
            type="password"
            name="password"
            ng-model="user.password"
            placeholder="Password"
            required=true
            ng-enter="register(registerForm)"
          )
        .form-group
          a.btn.btn-block.btn-default(ng-click="register(registerForm)") Register
    

    .signup-link
      span Already a member, 
      a.link(ui-sref="auth.login") click here